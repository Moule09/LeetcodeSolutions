//User function Template for C++

/*Function to swap array elements
* arr : array input
* n : number of elements in array
*/
class Solution{
  public:
    void swapElements(int arr[], int n){
        
        // Your code here
        int temp=0;
         for(int i=0;i<n;i++){
             if((i+2)<n){
                 temp=arr[i];
                 arr[i]=arr[i+2];
                 arr[i+2]=temp;
             }
         }
    }
};
